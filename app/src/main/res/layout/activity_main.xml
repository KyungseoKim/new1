<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="buttonClick"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title"
        android:textColor="#E91E63"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.92" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="buttonCLick"
        android:text="@string/btn1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text1" />

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="535dp"
        android:layout_height="730dp"
        app:layout_constraintBottom_toTopOf="@+id/text1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="2dp">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="220dp"
            android:layout_height="230dp"
            android:contentDescription="TODO"
            app:layout_column="0"
            app:layout_row="0"
            app:srcCompat="@drawable/c0029t01" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="230dp"
            android:layout_height="231dp"
            app:layout_column="1"
            app:layout_row="0"
            app:srcCompat="@drawable/c0089t01" />

        <ImageButton
            android:id="@+id/imageButton11"
            android:layout_width="243dp"
            android:layout_height="389dp"
            app:layout_column="1"
            app:layout_row="1"
            app:srcCompat="@drawable/_4_2021__4__15___4_54__4" />

        <ImageButton
            android:id="@+id/imageButton16"
            android:layout_width="220dp"
            android:layout_height="389dp"
            app:layout_column="0"
            app:layout_row="1"
            app:srcCompat="@drawable/img_2363" />

        <ImageButton
            android:id="@+id/imageButton19"
            android:layout_width="218dp"
            android:layout_height="113dp"
            app:layout_column="0"
            app:layout_row="2"
            app:srcCompat="@drawable/_2021_04_18__4_38_10" />

        <ImageButton
            android:id="@+id/imageButton20"
            android:layout_width="256dp"
            android:layout_height="114dp"
            app:layout_column="1"
            app:layout_row="2"
            app:srcCompat="@drawable/org_dsc00058" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>